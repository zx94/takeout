<?xml version = "1.0" encoding = "UTF-8"?>
<!DOCTYPE mapper PUBLIC
        "-//mybatis.org//DTD com.example.Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.UserMapper">
    <resultMap id="userMap" type="com.example.demo.entity.User">
        <result property="id" column="id"/>
        <result property="userName" column="userName"/>
        <result property="authorityName" column="authorityName"/>
        <result property="password" column="password"/>
    </resultMap>

    <insert id="create" parameterType="com.example.demo.entity.User">
        insert into user(id, username, authorityName, password)
        values (#{id}, #{userName}, #{authorityName}, #{password})
    </insert>
    <update id="update" parameterType="com.example.demo.entity.User">
        update user
        set userName=#{u.userName},
            authorityName=#{u.authorityName},
            password=#{u.password}
        where id = #{u.id}
    </update>
    <delete id="delete" parameterType="Long">
        delete from user where id = #{id}
    </delete>

    <select id="findAll" resultMap="userMap">select * from user</select>
    <select id="findById" resultMap="userMap" parameterType="Long">
        select *
        from user
        where id = #{id}
    </select>
    <select id="findByUserName" resultMap="userMap" parameterType="String">
        select *
        from user
        where userName = #{userName}
    </select>

</mapper>