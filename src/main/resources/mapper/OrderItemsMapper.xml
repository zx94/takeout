  <insert id="create" parameterType="com.example.demo.entity.OrderItems">
        insert into order_items(id,order_number,order_id,product_name,product_id,
        product_price,product_discount,description,image,been_deleted)
        values (#{id}, #{order_number},#{order_id},#{product_name},#{product_id},
        #{product_price}, #{product_discount},#{description},#{image},#{been_deleted})
    </insert>

  <update id="update" parameterType="com.example.demo.entity.OrderItems">
        update order_items
        set product_name=#{u.product_name},
            product_id=#{u.product_id},
            product_price=#{u.product_price},
            product_discount=#{u.product_discount},
        where id = #{u.id}
    </update>

  <delete id="delete" parameterType="Long">
        update order_items
        set  been_deleted=#{been_deleted}
        where id = #{id}
    </delete>

  <select id="findAll" resultMap="orderItemsMap">
        select *
        from order_items
        where been_deleted = ture
    </select>

  <select id="findById" resultMap="orderItemsMap" parameterType="Long">
        select *
        from order_items
        where id = #{id} and been_deleted = ture
    </select>

</mapper>